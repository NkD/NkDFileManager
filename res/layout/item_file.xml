<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/itemFile"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:gravity="top">
    <cz.cube.nkd.filemanager.component.ItemImageView android:id="@+id/itemIcon" android:src="@drawable/app_icon" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_margin="2dip" android:layout_height="40dip" android:layout_width="60dip"></cz.cube.nkd.filemanager.component.ItemImageView>
    <TextView android:id="@+id/itemDataRight" android:text="itemDataRight" android:textColor="@color/Grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/itemDataLeft" android:layout_alignBottom="@+id/itemDataLeft" android:layout_alignParentRight="true" android:textSize="14dip"></TextView>
    <TextView android:textSize="16dp" android:id="@+id/itemName" android:text="itemName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/itemIcon" android:layout_alignParentRight="true" android:layout_above="@+id/itemDataRight" android:textColor="#FFFFFF" android:ellipsize="middle" android:scrollHorizontally="true" android:maxLines="1"></TextView>
    <TextView android:id="@+id/itemDataLeft" android:text="itemDataLeft" android:textColor="@color/Grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/itemIcon" android:layout_toRightOf="@+id/itemIcon" android:textSize="14dip"></TextView>
    
</RelativeLayout>
